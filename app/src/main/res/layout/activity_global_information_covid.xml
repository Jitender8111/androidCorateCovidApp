<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".GlobalInformationCovid">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="World Status Update in 10 minutes"
                android:gravity="center"
                android:textSize="18dp"
                android:textAllCaps="true"
                ></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_brown"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                >
                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1.7"

                     android:textStyle="bold"
                     android:text="Total Cases"
                      android:gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:textSize="18dp">

                 </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:id="@+id/tvglobalTotalCasesInNumber"
                    android:textStyle="bold"
                    android:text="0"
                    android:textColor="@color/dark_red"
                   android:gravity="center"

                    android:textSize="15dp">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_brown"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"

                    android:textStyle="bold"
                    android:text="Recovered"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:id="@+id/tvGlobalRecovredInNumber"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/dark_red"
                    android:textSize="15dp">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_brown"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"

                    android:textStyle="bold"
                    android:text="Deaths"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:id="@+id/tvglobalDeathsInNumber"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/dark_red"
                    android:textSize="15dp">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_brown"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"

                    android:textStyle="bold"
                    android:text="Active"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:id="@+id/tvglobalActiveInNumber"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/dark_red"
                    android:textSize="15dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:cardCornerRadius="10dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"

            android:orientation="vertical"
            >
          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:textStyle="bold"
              android:text="AFFECTED COUNTRY"
              android:gravity="center"
              android:textSize="18dp"
              ></TextView>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/dark_brown"
             ></View>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="9"
              android:orientation="vertical"
              android:id="@+id/lnforvisibleGLobal"
              android:visibility="gone"
              >
              <ListView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="9"
                  android:layout_margin="5dp"
                  android:id="@+id/listviewForGlobalCases"
                  ></ListView>
          </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relForGlobal"
                android:visibility="visible"

                >
                <com.leo.simplearcloader.SimpleArcLoader
                    android:visibility="visible"
                    android:id="@+id/loaderss"
                    android:layout_centerInParent="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:arc_style="simple_arc"
                    android:layout_gravity="center_horizontal"

                    ></com.leo.simplearcloader.SimpleArcLoader>
            </RelativeLayout>



        </LinearLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>